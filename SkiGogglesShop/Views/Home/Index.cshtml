@model IEnumerable<SkiGogglesShop.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">See the Mountain Clearly</h1>
                <p class="lead mb-4">Premium ski goggles for every condition. From budget-friendly options to professional-grade equipment.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">
                    Shop Now<i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <i class="bi bi-sunglasses" style="font-size: 12rem; opacity: 0.8;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Category Cards -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Shop by Category</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <a asp-controller="Products" asp-action="Index" asp-route-category="Budget" class="text-decoration-none">
                    <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                        <div class="card-body py-5">
                            <i class="bi bi-piggy-bank text-primary" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">Budget</h4>
                            <p class="text-muted">Quality goggles under $80</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Products" asp-action="Index" asp-route-category="Mid-Range" class="text-decoration-none">
                    <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                        <div class="card-body py-5">
                            <i class="bi bi-stars text-primary" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">Mid-Range</h4>
                            <p class="text-muted">Best value $100-$150</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Products" asp-action="Index" asp-route-category="Premium" class="text-decoration-none">
                    <div class="card h-100 text-center border-0 shadow-sm hover-shadow">
                        <div class="card-body py-5">
                            <i class="bi bi-trophy text-primary" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">Premium</h4>
                            <p class="text-muted">Professional grade $200+</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="mb-5">
        <h2 class="text-center mb-4">Featured Products</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-sunglasses" style="font-size: 4rem; color: #6c757d;"></i>
                        </div>
                        <div class="card-body">
                            <span class="badge bg-primary mb-2">@product.Category</span>
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted small">@product.LensColor | @product.FrameStyle</p>
                            <p class="fs-4 fw-bold text-primary mb-0">$@product.Price.ToString("F2")</p>
                        </div>
                        <div class="card-footer bg-transparent border-0">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-lg">
                View All Products
            </a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5 bg-light rounded mb-5">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md-4">
                    <i class="bi bi-truck text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Free Shipping</h5>
                    <p class="text-muted">On orders over $100</p>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-shield-check text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Quality Guarantee</h5>
                    <p class="text-muted">30-day return policy</p>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-headset text-primary" style="font-size: 2.5rem;"></i>
                    <h5 class="mt-3">Expert Support</h5>
                    <p class="text-muted">Help when you need it</p>
                </div>
            </div>
        </div>
    </section>
</div>
